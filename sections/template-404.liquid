<div class="max-w-md">
    <div class="text-5xl font-bold my-4">
        {% if section.settings.title == blank %}
        {% assign title = 'general.404.title' | t %}
        {% else %}
        {% assign title = section.settings.title %}
        {% endif %}
        {{ title }}
    </div>
    <div class="my-4">
        <p class="text-base md:text-xl leading-normal">
            {% if section.settings.subtext == blank %}
            {% assign subtext = 'general.404.subtext_html' | t %}
            {% else %}
            {% assign subtext = section.settings.subtext %}
            {% endif %}
            {{ subtext }}
        </p>
    </div>
    <div class="my-4">
        {% if section.settings.button_url == blank %}
        {% assign shop_url = shop.secure_url %}
        {% else %}
        {% assign shop_url = section.settings.button_url %}
        {% endif %}
        <a class="px-4 inline py-2 text-base font-medium shadow bg-green-600 hover:bg-green-800 text-white"
            href="{{ shop_url }}">{{ section.settings.button_label }}</a>
    </div>
</div>

{% schema %}
{
"name": "Template 404",
"tag": "section",
"class": "flex items-center justify-center text-center py-7 h-screen flex-col",
"settings": [
{
"type": "text",
"id": "title",
"label": "404 Heading Title"
},
{
"type": "text",
"id": "subtext",
"label": "404 subtext"
},
{
"type": "text",
"id": "button_label",
"default": "Back to homepage",
"label": "Button label"
},
{
"type": "url",
"id": "button_url",
"label": "Button URL"
}
]
}
{% endschema %}